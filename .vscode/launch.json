	"version": "0.2.0",
	"configurations": [
		{
			"name": "Build and debug polygonization",
			"type": "cppdbg",
			"request": "launch",
			//"program": "${workspaceFolder}/polygonization",
			"program": "${workspaceFolder}/optimal_polygon",
			"args": [
				"-i",
				"euro-night-0000020.instance",
				"-o", 
				"output.txt",
				"-algorithm",
				"local_search",
				"-L",
				"10",
				"-max",
				"-threshold",
				"50.0"
			],
			// "args": [
			// 	"-i",
			// 	"../images/euro-night-0001000.instance",
			// 	"-o", 
			// 	"output.txt",
			// 	"-algorithm",
			// 	//"convex_hull",
			// 	"incremental",
			// 	"-edge_selection",
			// 	"2",
			// 	"-initialization",
			// 	"1b"
			// ],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
				"description": "Enable pretty-printing for gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
				}
			],
			 "preLaunchTask": "Build polygonization for debug",
			"miDebuggerPath": "/usr/bin/gdb"
		}
	]
}